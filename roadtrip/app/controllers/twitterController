  Trip.find({
    $or : [
      {'endTime': null},
      {'endTime': {'$lt': new Date() } } 
    ]
  }, {}, function(err, trips) {
    for (var i = 0; i < trips.length; i++) {
      for (var j = 0; j < trips[i].people.length; j++) {
